BY DEFAULT 

#include <iostream>
using namespace std;
class num
{
    public:
    int n,sum=0,i;
    num()
    {
        n=5;
        for( i=1;i<=n;i++)
        {
             sum=sum+i;
        }
    }
    void display()
    {
        cout<<"sum:"<<sum;
    }
};
int main() {
    num n1;
    n1.display();
    return 0;
}

BY PARAMERTERISED 

#include <iostream>
using namespace std;
class num
{
    public:
    int n,sum=0,i;
    num(int no)
    {
        n=no;
        for( i=1;i<=n;i++)
        {
             sum=sum+i;
        }
    }
    void display()
    {
        cout<<"sum:"<<sum;
    }
};
int main() {
    num n1(5);
    n1.display();
    return 0;
}

BY COPY 

#include <iostream>
using namespace std;
class num
{
    public:
    int n,sum=0,i;
    num()
    {
        n=5;
    }
    num(num &no)
    {
        n=no.n;
        for( i=1;i<=n;i++)
        {
             sum=sum+i;
        }
        cout<<"sum:"<<sum;
    }
};
int main() {
    num n1;
    num n2(n1);
    return 0;
}
