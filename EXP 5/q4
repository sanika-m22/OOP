#include <iostream>
using namespace std;
    class book
    {
        int price;
        string title;
        string author;
        public:
        book()
        {
            price=100;
            title="why not";
            author="sanika mad";
        }
        book(int p,string t,string a)
        {
            price=p;
            title=t;
            author=a;
        }
        book(int q,string u)
        {
            price=q;
            title=u;
            author="sanika";
        }
        void display()
        {
            cout<<endl<<"price:"<<price<<endl<<"title:"<<title<<endl<<"author:"<<author;
        }
    };
    int main()
    {
        book b1;
        b1.display();
        book b2(200,"yes please","zaheer");
        b2.display();
        book b3(400,"stop yap");
        b3.display();
    return 0;
}
