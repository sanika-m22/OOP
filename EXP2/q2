#include <iostream>
using namespace std;
class account
{
    public:
    int accno;
    float balance;
    void accept()
    {
        cout<<"enter account number and balance:";
        cin>>accno>>balance;
    }
    void giveintrest()
    {
        if(balance>=5000)
        {
            balance+=balance*0.10;
        }
    }
    void display()
    {
        if(balance>=5000)
        {
         cout<<"updated balances:"<<accno<<endl<<balance;
        }
    }
};
int main() {
   account a[10];
   int i;
    for(i=0;i<10;i++)
    {
        a[i].accept();
    }
    for(i=0;i<10;i++)
    {
        a[i].giveintrest();
        a[i].display();
    }
    return 0;
}
