#include <iostream>
using namespace std;
class staff{
    public:
    string name;
    string post;
    void accept()
    {
        cout<<"enter name and post:";
        cin>>name>>post;
    }
    void display()
    {
        cout<<name<<endl;
    }
};

int main() {
staff a[5];
int i;
for(i=0;i<5;i++)
{
    a[i].accept();
}
cout<<"names of staff that are HODs:";
for(i=0;i<5;i++)
{
    if(a[i].post=="HOD")
    {
        a[i].display();
    }
}
return 0;
}
