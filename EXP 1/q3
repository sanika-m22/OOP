#include <iostream>
using namespace std;
class time{
    int h,m,s;
    char c;
    public:
    void accept()
    {
        cout<<"enter time in HH:MM::SS format:";
        cin>>h>>c>>m>>c>>s;
    }
    void display()
    {
        int totalseconds=h*3600+m*60+s;
        cout<<"total time in seconds:"<<totalseconds;
    }
}t;
int main() {
    t.accept();
    t.display();

    return 0;
}
